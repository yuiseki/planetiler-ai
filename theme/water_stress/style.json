{
  "version": 8,
  "name": "Global Water Stress",
  "metadata": {},
  "sources": {
    "water_stress": {
      "type": "vector",
      "url": "mbtiles://{water_stress}"
    }
  },
  "glyphs": "https://fonts.tilehosting.com/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#45516e"
      }
    },
    {
      "id": "ocean",
      "type": "fill",
      "source": "water_stress",
      "source-layer": "ocean",
      "paint": {
        "fill-color": "#002e42"
      }
    },
    {
      "id": "land",
      "type": "fill",
      "source": "water_stress",
      "source-layer": "land",
      "paint": {
        "fill-color": "#45516e"
      }
    },
    {
      "id": "water_stress_areas",
      "type": "fill",
      "source": "water_stress",
      "source-layer": "water_stress_areas",
      "minzoom": 0,
      "paint": {
        "fill-color": [
          "step",
          [
            "get",
            "water_risk"
          ],
          "#cccccc",
          0,
          "#ffffd4",
          1,
          "#fed98e",
          2,
          "#fe9929",
          3,
          "#d95f0e",
