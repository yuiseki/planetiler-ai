      "type": "circle",
      "source": "healthcare",
      "source-layer": "hospitals",
      "paint": {
        "circle-color": "#dc143c",
        "circle-radius": [
          "interpolate",
          ["linear"],
          ["zoom"],
          8, 4,
          12, 8,
          16, 12
        ],
        "circle-stroke-width": 2,
        "circle-stroke-color": "#ffffff"
