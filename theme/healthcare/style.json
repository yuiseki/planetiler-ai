{
  "version": 8,
  "name": "Healthcare Infrastructure",
  "glyphs": "fonts/{fontstack}/{range}.pbf",
  "sources": {
    "healthcare": {
      "type": "vector",
      "url": "mbtiles://{healthcare}"
